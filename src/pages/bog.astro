---

import Base from "../layouts/Base.astro"

---

<Base title="Blå bog">
	<main class="flex flex-col items-center gap-4 p-4 bg-neutral-900 h-screen">
		<div transition:name="hero" class="flex flex-col items-center">
			<div transition:name="heroimg" class="size-48 overflow-hidden rounded-full ring-[#222222] ring-2">
				<img class="overflow-hidden object-cover object-top -mt-10" src="/img/alek.jpg" alt="alek">
			</div>
			<div class="mt-2 flex gap-1 items-end">
				<h1 class="text-2xl font-bold text-gray-100 text-mulish">Aleksander</h1>
				<p class="text-gray-400 text-sm">17 år</p>
			</div>
		</div>

		<div class="bg-neutral-700 rounded-lg">
			<table class="table-auto w-full">
				<thead>
					<tr>
						<th>Datum</th>
						<th>Titel</th>
						<th>Beskrivelse</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>2022-09-01</td>
						<td>Blå bog</td>
						<td>En bog om blå bog</td>
					</tr>
					<tr>
						<td>2022-09-02</td>
						<td>Blå bog</td>
						<td>En bog om blå bog</td>
					</tr>
					<tr>
						<td>2022-09-03</td>
						<td>Blå bog</td>
						<td>En bog om blå bog</td>
					</tr>
			</table>
		</div>

	</main>
</Base>
