---
import LinkButton from "../components/LinkButton.astro";
import Base from "../layouts/Base.astro";
---

<Base title="Alek">

  <main class="h-screen flex flex-col items-center justify-center z-10">
    <div transition:name="hero" class="flex flex-col items-center">
      <div
        transition:name="heroimg"
        class="size-72 overflow-hidden rounded-full ring-[#222222] ring-2"
      >
        <img
          class="overflow-hidden object-cover object-top -mt-10"
          src="/img/alek.jpg"
          alt="alek"
        />
      </div>
      <div class="mt-5 flex gap-1 items-end">
        <h1 class="text-4xl font-bold text-gray-100 text-mulish">Aleksander</h1>
        <p class="text-gray-400">17 år</p>
      </div>
    </div>
    <div class="flex mt-5 gap-4">
      <LinkButton color="blue" href="/bog">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-4"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M12 6.042A8.967 8.967 0 0 0 6 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 0 1 6 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 0 1 6-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0 0 18 18a8.967 8.967 0 0 0-6 2.292m0-14.25v14.25"
          ></path>
        </svg>

        Blå bog
      </LinkButton>
      <LinkButton color="green" href="/galleri">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-4"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z"
          ></path>
        </svg>
        Billeder
      </LinkButton>
    </div>
  </main>
</Base>
